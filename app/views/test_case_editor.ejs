<%- include('header') %>

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-4 offset-lg-4 text-center">
        <br /><br>
        <h1><%= title %></h1>
        </div><!-- end .col-lg-4 -->
    </div><!-- end .row -->
        
    <br/>

    <div class="row">
        <div class="col-lg-4 offset-lg-2">
            <h2>Scenarios:</h2>
            <select size="5" style="width:600px; " onChange="showIt(this)" id="tcSelection">
                <% for(var i=0; i < testcases.length; i++){ %>
                    <option value="<%= testcases[i].Gherkin %>" style="white-space:pre-wrap; border-bottom: 1px solid #ddd;" id="<%=testcases[i].TestCaseId%>">
                        <%=testcases[i].TestCaseId%>  | <%= testcases[i].TestCaseDescription %>
                    </option>
                <% } %>
            </select>
        </div>
        <div class="col-lg-4">
            <h2>Behat Code:</h2>
            <p id="selectedID" style="display:none"></p>
            <p style="height:300px;" id="gherkin">Select a Scenario on the left to view the related Gherkin.  Then you may edit the selected Gherkin by clicking below.</p>

            <br><br>
        </div>
    </div>

    <br>
    <div class="row">
        <div class="col-lg-4 offset-lg-2 text-center">
            <button class="btn btn-warning width-set" onclick'createTc()'>Create New Test Case</button>
        </div>
        <div class="col-lg-4 text-center">
            <button class="btn btn-warning width-set" onclick="editTc()">Edit Selected Test Case</button>
        </div>
    </div>

    <br><br>

    <div id="hiddenRow" style="display:none">

        <div class="row">
            <div class="col-lg-1 offset-lg-2">
                <h2> ID: </h2>
                <p id="theID"></p>
            </div>
            <div class="col-lg-3" >
                <h2>Scenario: </h2>
                <textarea  rows="4" cols="60" id="theScenario"></textarea>
            </div>
            <div class="col-lg-4">
                <h2>Gherkin: </h2>
                <textarea  rows="4" cols="60" id="theGherkin"></textarea>
            </div>
        </div>
        <br><br>
        
        <div class="row">
            <div class="col-lg-4 offset-lg-2">
                <h2> Apply to Feature Page: </h2>
                <% for(var x=0; x < template.length; x++) {%>
                    <button type="button" class="btn locale-button x" id="<%=template[x].TestCaseId %>">
                    <b><%=  template[x].Id  %></b>
                    </button>                   
                <% console.log(template[x].TestCaseId);}%>
            </div>
            <div class="col-lg-4" >
                <h2> When you are absolutely sure:</h2>
                <br><br>
                <div class="text-center"><button type="button" class="btn btn-danger locale-button width-set">Save Edits</button></div>
            </div>
        </div>
    </div><!-- end of hiddenRow -hidden area that unhides on "edit selected test case" button click -->

</div><!-- end .container -->

  <br /><br /><br /><br />

  <script>

    function showIt(ID){
        var p = document.getElementById("gherkin");
        var text =document.getElementById("tcSelection").value;
        p.innerHTML = text;
        
        var p2=document.getElementById("selectedID");
        var input =ID[ID.selectedIndex].id;
        p2.innerHTML = input;
    }
    
    function editTc(){

        var hidden=document.getElementById("hiddenRow");
        hidden.setAttribute("style", "display:visible");
                
        var placement1= document.getElementById("theID");
        var ID=document.getElementById("selectedID").innerHTML; //grab the TestCaseID from the hidden paragraph above
        placement1.innerHTML=ID;

        var placement2= document.getElementById("theScenario");
        var content2=document.getElementById("tcSelection").options;
        var index = document.getElementById("tcSelection").selectedIndex;
        content2 =content2[index].text;
        content2=content2.replace(/^[^Scenario]*/, ''); //this gets rid of the ID that was added to the beginning of the content1 string
        placement2.innerHTML = content2;

        var placement3= document.getElementById("theGherkin");
        var content3=document.getElementById("tcSelection").value;
        content3= content3.replace(content2,''); //this gets rid of the Scenario so that content3 only contains Gherkin 
        content3=content3.replace("@javascript",''); //this gets rid of the '@javascript' that is in some of these Gherkin strings
        placement3.innerHTML=content3;
        // getLive(content1);

        var buttons = document.getElementsByClassName("x");

         for (var q=0; q<buttons.length; q++){
            buttons[q].setAttribute("class", "btn locale-button x");
        }

        var string = '"';
        for (var x=0; x<buttons.length; x++){
            var buttonData = buttons[x].id;
            buttonData = buttonData.split(",");

            if (buttonData.indexOf(ID.toString(),0) > -1){
                buttons[x].setAttribute("class", "btn btn-success locale-button x");
            }
        }

        
    }
    
